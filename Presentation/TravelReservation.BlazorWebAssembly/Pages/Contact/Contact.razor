<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Bizimle İletişime Geçin</h5>
                            <p class="mt-3 mb-4">
                                7/24 Hizmetinizdeyiz
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Email</h6>
                            <p>
                                <a href="mailto:tt7833827@gmail.com">
                                    UYUMAZ Tur
                                </a>
                            </p>
                            <h6 class="mt-4">Adres</h6>
                            <p> Türkiye</p>
                            <h6 class="mt-4">Numara</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">+44-255-366-88</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form action="" method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" name="w3lName" id="w3lName" placeholder="Adınız Soyadınız" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="email" name="w3lSender" id="w3lSender" placeholder="Emailiniz" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="w3lSubect" id="w3lSubect" placeholder="Konu" class="contact-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="w3lMessage" id="w3lMessage" placeholder="Mesajınız" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Lokasyon</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6350044.418344829!2d30.686834794636223!3d39.00145054961468!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b0155c964f2671%3A0x40d9dbd42a625f2a!2zVMO8cmtpeWU!5e0!3m2!1str!2str!4v1671645324152!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>
